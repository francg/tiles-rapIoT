<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
<script src="asset/js/bootstrap/bootstrap.js"></script>

<script>
    Handlebars.partials = JST;
    var led=null;
    var client=TileClient.getInstance();

    var registeredDevices=null;

    $( document ).ready(function() {
        sidebarToggle.init();
        led=new LedOn("lightButton");
        client.connect("ws://localhost:3000","#connectStatus");

    });

    $(document).on(Variables.onConnect,function(e){
        var subRec = "TilesReceive";
        document.getElementById("connectStatus").className="active";
        registeredDevices=RegisterDevice.getInstance();
        client.addModule(subRec, led.changeDomStatus);

        client.addModule("activate",registeredDevices.connect);
        client.addModule("deactivate",registeredDevices.disconnect);
    });

</script>


<div id="layout">

    <!-- toggle menu-->
    <a href="#menu" id="menuLink" class="menu-link"><span></span></a>


    <div id="menu">
        {{>sidebar}}
    </div>


    <div id="main">
        {{>body}}
    </div>

    <div class="modal" id="globalModal" tabindex="-1" role="dialog" aria-labelledby="globalModalLabel"></div>
</div>


<style>
    #lightButton.active {
        background-color: yellow !important;
    }

    #lightButton {
        background-color: red;
    }

    #connectStatus.active{
        background-color:green;
    }

    #console-log-div {
